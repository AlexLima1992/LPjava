public class Main {
    public static void main(String[] args) {
        //TIP Press <shortcut actionId="ShowIntentionActions"/> with your caret at the highlighted text
        // to see how IntelliJ IDEA suggests fixing it.

        Scanner sc = new Scanner(System.in);
        double numero1;
        double numero2;

        System.out.println("Digite o um primeiro numero: ");
        numero1 = sc.nextInt();
        System.out.println("Digite o um segundo numero: ");
        numero2 = sc.nextInt();

        if (numero1 > numero2) {
            System.out.println("Numero "+numero1 + " é o numero maior");
        }
        if (numero1 < numero2){
            System.out.println("Numero "+numero2 + " é o numero maior");
                          }

    }
}

